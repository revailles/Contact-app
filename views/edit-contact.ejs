<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Edit Contact Form</h2>

            <% if(typeof errors !='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <form method="post" action="/contact/?_method=PUT">
                        <input type="hidden" name="_id" value="<%= contact._id %> ">
                        <input type="hidden" name="oldName" value="<%= contact.name %> ">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" required
                                value="<%= (contact.oldName) ? contact.oldName : contact.name %>">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required
                                value="<%= contact.email %>">
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            <input type="text" class="form-control" id="phone" name="phone" required
                                value="<%= contact.phone %>">
                        </div>
                        <button type="submit" class="btn btn-info">Update Contact</button>
                    </form>
        </div>
    </div>
</div>