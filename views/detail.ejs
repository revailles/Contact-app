<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Contact Detail</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Contact is not valid
                    <br>
                    <a href="/contact" class="alert-link fw-normal">&laquo; Return</a>
                </div>
                <% } else { %>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= contact.name %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <%= contact.email %>
                            </h6>
                            <p class="card-text">
                                <%= contact.phone %>
                            </p>
                            <a href="/contact/edit/<%= contact.name %>" class="btn btn-info badge">Update</a>
                            <form action="/contact?_method=DELETE" method="POST" class='d-inline'>
                                <input type="hidden" name="name" value="<%= contact.name %>">
                                <button type="submit" class="btn btn-danger badge" onclick="return confirm('Confirm?')"></button>
                            </form>
                            <a href="/contact" class="card-link d-block mt-3">&laquo; Return</a>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
</div>